def qsort(list_numbers, left, right):
    middle = (left + right) // 2

    p = list_numbers[middle]
    i, j = left, right
    while i <= j:
        while list_numbers[i] < p:
            i += 1
        while list_numbers[j] > p:
            j -= 1
        if i <= j:
            list_numbers[i], list_numbers[j] = list_numbers[j], list_numbers[i]
            i += 1
            j -= 1

    if j > left:
        qsort(list_numbers, left, j)
    if right > i:
        qsort(list_numbers, i, right)
        return list_numbers

